#!/usr/bin/sh

case $1 in
	-) pamixer --allow-boost -d 5 ; pkill -RTMIN+21 ${STATUSBAR:-dwmblocks}; dunstify $(pamixer --get-volume) -r 223345;;
	+) pamixer --allow-boost -i 1 ; pkill -RTMIN+21 ${STATUSBAR:-dwmblocks}; dunstify  $(pamixer --get-volume) -r 223345;;
	m) pamixer -t ; pkill -RTMIN+21 ${STATUSBAR:-dwmblocks}
esac
