#!/bin/env python

### import main class 
from Base import *

### get current file location
currentFile = pathlib.Path(__file__)
#### instance
memory = BaseProgram(
    'notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)"',
    'None',
    currentFile,
)
### memory interface status
# get ram used
ram_used = psutil.virtual_memory().used // 1024 // 1024 / 1000
### icon
icon = 'ï¡š '
# add 
memory.statusbar= '{}{:.1f}'.format(icon, ram_used)
# run script
memory.run()
